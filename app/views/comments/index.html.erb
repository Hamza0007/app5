<h2>Comments</h2>
<% @post.comments.each do |comment| %>
  <p>
    <b>Commenter:</b>
    <%= comment.commenter %>
  </p>
 
  <p>
    <b>Comment:</b>
    <%= comment.body %>
  </p>

  <p><%= link_to 'Edit', edit_comment_path(comment) %></p>
  <p>
    <%= link_to 'Destroy Comment', comment,
               :confirm => 'Are you sure?',
               :method => :delete %>
  </p>
<% end %>